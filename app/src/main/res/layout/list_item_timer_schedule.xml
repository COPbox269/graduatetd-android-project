<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relative_layout_timer_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_timer_schedule_recycleview"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_display_time"
            android:textSize="27sp"
            android:text="00:00"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_display_controlmode"
        android:layout_toRightOf="@+id/text_view_display_time"
        android:layout_above="@id/text_view_display_repeat"
        android:textSize="15sp"
        android:text="Turn on"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_display_repeat"
        android:layout_below="@+id/text_view_display_time"
        android:textSize="15sp"
        android:text="MON THUR TUE WED THUR FRI SAT SUN"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/text_view_display_relay"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/text_view_display_repeat"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="4dp"
        android:gravity="start"
        android:maxLines="4"
        android:minLines="2"
        android:text="Phong Khach Phong Ngu Phong an Phong trung bay"
        android:textSize="15sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/switch_timer"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>